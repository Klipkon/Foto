---
import {Component} from "../interfaces/page";
import Header from "./Header";
import Hero from "./Hero";
import CardsSection from "./CardsSection";

interface Props {
    components: Component[]
}

const { components } = Astro.props;
---

{components.map(component => {
    switch(component.__component) {
        case "components.header":
            return <Header {...component} client:load />
        case "components.hero":
            return <Hero {...component} client:load/>
        case "components.section-with-cards":
            return <CardsSection {...component} />
    }
})}
