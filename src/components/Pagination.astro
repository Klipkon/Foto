---
import {
  Pagination as PaginationContainer,
  PaginationContent,
  PaginationItem,
  PaginationLink,
  PaginationNext,
  PaginationPrevious,
} from "./ui/pagination";

interface Props {
  currentPage: number;
  previous?: string;
  next?: string;
}

const { currentPage, previous, next } = Astro.props;
---

<div class="w-100 flex items-center justify-center pt-10">
  <PaginationContainer>
    <PaginationContent>
      {
        previous && (
          <PaginationItem>
            <PaginationPrevious size="sm" href={previous} />
          </PaginationItem>
        )
      }
      <PaginationItem>
        <PaginationLink size="sm" href="#">{currentPage}</PaginationLink>
      </PaginationItem>
      {
        next && (
          <PaginationItem>
            <PaginationNext size="sm" href={next} />
          </PaginationItem>
        )
      }
    </PaginationContent>
  </PaginationContainer>
</div>
